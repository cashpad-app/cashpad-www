svg(ng-attr-width="{{viewport.width}}" ng-attr-height="{{viewport.height}}")
  g(ng-attr-transform="translate({{viewport.paddingLeft}}, {{viewport.paddingTop}})")
    path(ng-repeat="curve in curves" ng-attr-d="{{curve._line}}" fill="{{curve.color}}")
    text(ng-repeat="curve in curves | gwBalanceUniquePerson track by curve.item.person" ng-attr-x="{{curve.line.centroid[0]}}" y="15" text-anchor="middle" ng-class="{invert: (curve.line.centroid[1] - viewport.innerHeight / 2) <= 6}") {{curve.item.person}}
